{
  "name": "aws-lights-out-plan",
  "version": "1.0.0",
  "description": "自動在非工作時間關閉 AWS 開發環境資源（ECS Service 等）以節省成本",
  "main": "index.js",
  "engines": {
    "node": ">=20.0.0 <21.0.0"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc -p tsconfig.build.json --noEmit",
    "sss-lab:set-config": "node scripts/deploy-config.js --name /lights-out/sss-lab/config --config config/sss-lab.yml --region ap-southeast-1 --description \"Lights Out configuration for sss-lab account\"",
    "sss-lab:get-config": "node scripts/get-ssm-config.js --name /lights-out/sss-lab/config --region ap-southeast-1",
    "sss-lab:serverless": "node scripts/generate-cron.js --config config/sss-lab.yml && serverless deploy --region ap-southeast-1 --stage sss-lab --verbose",
    "sss-lab:lambda": "node scripts/deploy-lambda.js --function-name lights-out-sss-lab --region ap-southeast-1",
    "sss-lab:start": "node scripts/invoke-lambda.js --function-name lights-out-sss-lab --action start --region ap-southeast-1",
    "sss-lab:stop": "node scripts/invoke-lambda.js --function-name lights-out-sss-lab --action stop --region ap-southeast-1",
    "sss-lab:status": "node scripts/invoke-lambda.js --function-name lights-out-sss-lab --action status --region ap-southeast-1",
    "sss-lab:discover": "node scripts/invoke-lambda.js --function-name lights-out-sss-lab --action discover --region ap-southeast-1",
    "airsync-dev:set-config": "node scripts/deploy-config.js --name /lights-out/pg-development-airsync-dev/config --config config/pg-development/airsync-dev.yml --region us-east-1 --description \"Lights Out configuration for airsync-dev project\"",
    "airsync-dev:get-config": "node scripts/get-ssm-config.js --name /lights-out/pg-development-airsync-dev/config --region us-east-1",
    "airsync-dev:serverless": "node scripts/generate-cron.js --config config/pg-development/airsync-dev.yml && serverless deploy --region us-east-1 --stage pg-development-airsync-dev --verbose",
    "airsync-dev:lambda": "node scripts/deploy-lambda.js --function-name lights-out-pg-development-airsync-dev --region us-east-1",
    "airsync-dev:start": "node scripts/invoke-lambda.js --function-name lights-out-pg-development-airsync-dev --action start --region us-east-1",
    "airsync-dev:stop": "node scripts/invoke-lambda.js --function-name lights-out-pg-development-airsync-dev --action stop --region us-east-1",
    "airsync-dev:status": "node scripts/invoke-lambda.js --function-name lights-out-pg-development-airsync-dev --action status --region us-east-1",
    "airsync-dev:discover": "node scripts/invoke-lambda.js --function-name lights-out-pg-development-airsync-dev --action discover --region us-east-1"
  },
  "keywords": [
    "aws",
    "lambda",
    "serverless",
    "cost-optimization"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-application-auto-scaling": "^3.954.0",
    "@aws-sdk/client-ecs": "^3.954.0",
    "@aws-sdk/client-lambda": "^3.954.0",
    "@aws-sdk/client-rds": "^3.954.0",
    "@aws-sdk/client-resource-groups-tagging-api": "^3.954.0",
    "@aws-sdk/client-ssm": "^3.954.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "js-yaml": "^4.1.1",
    "lru-cache": "^11.2.4",
    "pino": "^10.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.159",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "aws-sdk-client-mock": "^4.1.0",
    "esbuild": "^0.27.2",
    "serverless": "^3.39.0",
    "serverless-better-credentials": "^2.0.1",
    "serverless-esbuild": "^1.57.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
